<form method="POST" action="/api/responses/{{survey.id}}/{{step.id}}">
<input type="hidden" name="responseId" value="{{responseId}}">

<table class="grid-table">
  <thead>
    <tr>
      <th></th>
      {{#step.columns}}
        <th>{{label}}</th>
      {{/step.columns}}
    </tr>
  </thead>

  <tbody>
   {{#step.rows}}
<tr>
  <td class="row-label">{{label}}</td>

  {{#columns}}
  <td>
    {{#isMultipleChoice}}
      <input
        type="checkbox"
        name="value[{{idRow}}][{{idCol}}][]"  
        value="{{idRow}}"           
      >
    {{/isMultipleChoice}}

   {{#isSingleChoice}}
<input
  type="radio"
  name="value[{{idCol}}]"
  value="{{idRow}}"
/>
{{/isSingleChoice}}

  </td>
  {{/columns}}
</tr>
{{/step.rows}}



  </tbody>
</table>

<button type="submit">Suivant</button>
</form>
